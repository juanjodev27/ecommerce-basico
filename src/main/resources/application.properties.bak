spring.application.name=mi-ecommerze

# Configuración de la base de datos PostgreSQL
spring.datasource.url=jdbc:postgresql://localhost:5432/mi_ecommerze
spring.datasource.username=postgres
spring.datasource.password=toke1994

# Configuración del pool de conexiones (HikariCP es el predeterminado en Spring Boot 2.x)
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5

# Configuración de JPA/Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
